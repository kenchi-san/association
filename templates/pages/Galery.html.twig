{% extends 'base.html.twig' %}
{% block title %}
    <title>photos de l'association Swahilisa</title>
    <meta name="description" content="Les souvenirs sont précieux. C'est pour cela que nous vous les partagons" />
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">

            <div class="row">
                {% for galery in galeries %}
                    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                        <a class="thumbnail" href="{{ galery.title }}" data-image-id="" data-toggle="modal"
                           data-title="{{ galery.title }}"
                           data-image="{{ asset("galery/" ~ galery.imageName) }}"
                           data-target="#image-gallery">
                            <img class="img-thumbnail"
                                 src="{{ asset("galery/" ~ galery.imageName) }}"
                                 alt="{{ galery.title }}">
                        </a>

                    </div>

                {% endfor %}


                <div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                     aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="image-gallery-title"></h4>
                                <button type="button" class="close" data-dismiss="modal"><span
                                            aria-hidden="true">×</span><span class="sr-only">Close</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <img id="image-gallery-image" class="img-responsive col-md-12" src="">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary float-left" id="show-previous-image"><i
                                            class="fa fa-arrow-left"></i>
                                </button>

                                <button type="button" id="show-next-image" class="btn btn-secondary float-right"><i
                                            class="fa fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="pagination">
                {{ knp_pagination_render(galeries) }}
            </div>
        </div>
    </div>
{% endblock %}