{% extends 'base.html.twig' %}
{% block body %}
    <body>


    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <h1 class="mt-4 mb-3">{{ actions.title }}

        </h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('homepage') }}">page d'accueil</a>
            </li>

        </ol>

        <div class="row">

            <!-- Post Content Column -->
            <div class="col-lg-8">

                <!-- Preview Image -->
                <img class="img-fluid rounded" src="{{ asset("images_action/"~ actions.imageName) }}" alt="">


                <!-- Date/Time -->
                <!--<p>Posted on January 1, 2017 at 12:00 PM</p>-->
<div class="pt-5">
                {{ actions.content |raw}}
</div>
                <hr>
            </div>
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">


                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Autre Action</h5>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="list-unstyled mb-0">
                                    {% for list in listAction %}
                                    <li>
                                        <a href="{{ path('action_post', {id:list.id}) }}">{{ list.title }}</a>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- /.row -->

    </div>
    <!-- /.container -->
    </body>
{% endblock %}


